<h1 class="text-center mb-3">Add Course</h1><hr style="background-color: #ffffff;">

<form class="form" action="/course/add" method="POST">
    <div class="form-group">
    <label for="id">Course ID</label>
    <input type="text" name="courseID" id="id" class="form-control">
    </div>
        
    <div class="form-group">
    <label for="name">Course Name</label>
    <input type="text" name="courseName" id="name" class="form-control">
    </div>
    
    <div class="form-group">
    <label for="dur">Course Duration</label>
    <input type="text" name="courseDuration" id="dur" class="form-control">
    </div>
    
    <div class="form-group">
    <label for="fee">Course Fee</label>
    <input type="text" name="courseFee" id="fee" class="form-control">
    </div>
    
    <button class="btn btn-primary btn-block" type="submit">Add Course</button>
</form>

<div class="container mt-5 text-center">
    <a href="/course/list" class="btn btn-light mt-4">Courses</a>
    <a href="/course/update" class="btn btn-light mt-4">Update Course</a>
    <a href="/course/delete" class="btn btn-light mt-4">Delete Course</a>
</div>
<div class="container mt-1 text-center">
    <a href="/" class="btn btn-warning mt-4 btn-block">HOME</a>
</div>